@page "/klassen"
@using StundenPlanApp.Data
@using StundenPlanApp.Models
@using Microsoft.EntityFrameworkCore
@inject StundenplanDbContext DbContext
@rendermode InteractiveServer

<PageTitle>Klassen Verwaltung</PageTitle>

<h1>Klassen Verwaltung</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <h3>Neue Klasse</h3>
        <EditForm Model="@neueKlasse" OnValidSubmit="@AddKlasse" FormName="AddKlasseForm">
            <div class="mb-2">
                <InputText @bind-Value="neueKlasse.Name" class="form-control" placeholder="Klassenname" />
            </div>
            <button type="submit" class="btn btn-primary">Hinzufügen</button>
        </EditForm>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var klasse in klassen)
        {
            <tr>
                <td>@klasse.Name</td>
                <td>
                    <button @onclick="() => DeleteKlasse(klasse.Id)" class="btn btn-sm btn-danger">Löschen</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Klasse> klassen = new();
    private Klasse neueKlasse = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        klassen = await DbContext.Klassen.OrderBy(k => k.Name).ToListAsync();
    }

    private async Task AddKlasse()
    {
        if (!string.IsNullOrWhiteSpace(neueKlasse.Name))
        {
            DbContext.Klassen.Add(neueKlasse);
            await DbContext.SaveChangesAsync();
            neueKlasse = new();
            await LoadData();
        }
    }

    private async Task DeleteKlasse(int id)
    {
        var klasse = await DbContext.Klassen.FindAsync(id);
        if (klasse != null)
        {
            DbContext.Klassen.Remove(klasse);
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
    }
}

